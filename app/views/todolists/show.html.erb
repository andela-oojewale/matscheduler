<div class="row">
  <div class="col m7 offset-m2 left">
    <h5>Saved Task</h5>
    <% unless @task %>
      <p><strong>Invalid ID specified</strong></p>
    <% else %>
      <table class="bordered highlight">
        <thead>
          <tr>
            <td>S/N</td>
            <td>Title</td>
            <td>Date/Time</td>
            <td>Done</td>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><span>1</span></td>
              <td><%= @task.title %></td>
              <td><%= @task.start %></td>
              <td><%= @task.done %></td>
            </tr>
        </tbody>
      </table>
    <% end %>
      <p>&nbsp;</p>
    <li><a href="/todolist/new" class="btn left">Create Tasks</a></li>
  </div>

</div>
